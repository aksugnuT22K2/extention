{
  "manifest_version": 2,
  "name": "insert-barcord",
  "short_name": "barcord",
  "description": "barcord",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "barcord"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["file:///*"],
      "css": ["css/style.css"],
      "js": ["js/barcord.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": ["tabs", "storage", "file:///*", "downloads", "contextMenus"]
}
